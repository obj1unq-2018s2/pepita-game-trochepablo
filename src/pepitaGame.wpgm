//EVENTOS
	//game.onTick(100, { pepita.swicthImage() })
	//game.whenCollideDo(roque,{ objeto => objeto.colisionHacer(objeto)})

//	TECLADO
	keyboard.v().onPressDo { pepita.volaHacia(villaGesell) }
	keyboard.b().onPressDo { pepita.volaHacia(buenosAires) }
		
//	START
	game.start()
}
